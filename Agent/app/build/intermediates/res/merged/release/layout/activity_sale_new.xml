<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	
	
	<android.support.design.widget.AppBarLayout android:layout_width="match_parent"
			android:layout_height="wrap_content">
		
		<android.support.v7.widget.Toolbar android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:id="@+id/toolbar"
				android:background="@color/colorPrimary">

		
		</android.support.v7.widget.Toolbar>
	</android.support.design.widget.AppBarLayout>
	
	<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			android:id="@+id/scroll_view"
			android:layout_height="wrap_content">
		<LinearLayout
				android:orientation="vertical"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:layout_marginRight="@dimen/activity_vertical_margin"
				android:layout_marginLeft="@dimen/activity_vertical_margin"
				android:layout_marginBottom="@dimen/activity_vertical_margin"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			<LinearLayout android:layout_width="match_parent"
					android:layout_height="80dp"
					android:background="@drawable/bg_card"
			>
				<TextView android:layout_width="80dp" android:layout_height="match_parent"
						android:text="From"
						android:padding="@dimen/activity_vertical_margin"
						android:gravity="center"
						android:textStyle="bold"
						android:textColor="@color/white"
						android:background="@color/accent"
						android:textSize="18sp"
						android:layout_gravity="center"/>
				<TextView android:layout_width="match_parent" android:layout_height="match_parent"
						android:text="@string/strmm_choose_fromcity"
						android:id="@+id/from"
						android:textSize="16sp"
						android:gravity="center"
						android:textColor="#444"/>

			</LinearLayout>

			<LinearLayout android:layout_width="match_parent"
					android:layout_height="80dp"
					android:background="@drawable/bg_card"
					android:layout_marginTop="@dimen/activity_vertical_margin"
			>
				<TextView android:layout_width="80dp" android:layout_height="match_parent"
						android:text="TO"

						android:textSize="18sp"
						android:padding="@dimen/activity_vertical_margin"
						android:gravity="center"
						android:textStyle="bold"
						android:textColor="@color/white"
						android:background="@color/accent"
						android:layout_gravity="center"/>
				<TextView

						android:id="@+id/to"
						android:textSize="16sp"
						android:text="@string/strmm_choose_tocity"
						android:gravity="center"
						android:textColor="#444"


						android:layout_width="match_parent" android:layout_height="match_parent"
				/>
			</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
					android:layout_height="80dp"
					android:background="@drawable/bg_card"
					android:layout_marginTop="@dimen/activity_vertical_margin"
			>
				<TextView android:layout_width="80dp" android:layout_height="match_parent"
						android:text="Date"

						android:textSize="18sp"
						android:padding="@dimen/activity_vertical_margin"
						android:gravity="center"
						android:textStyle="bold"
						android:textColor="@color/white"
						android:background="@color/accent"
						android:layout_gravity="center"/>
				<TextView


						android:textSize="16sp"
						android:text="Choose Date"
						android:gravity="center"
						android:textColor="#444"
						android:id="@+id/date_btn"


						android:layout_width="match_parent" android:layout_height="match_parent"
				/>
			</LinearLayout>


			<RelativeLayout android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">

				<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
						android:id="@+id/choose"
						android:gravity="center">


					<TextView android:layout_width="wrap_content" android:layout_height="50dp"
							android:text="@string/strmm_foreign"
							android:gravity="center"
							android:textStyle="bold"
							android:textSize="15sp"
							android:id="@+id/foreign"
							android:layout_centerHorizontal="true"/>
					<CheckBox android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/national_switch"
							android:layout_marginLeft="@dimen/activity_vertical_margin"
							android:padding="@dimen/activity_vertical_margin"
							android:layout_centerHorizontal="true"/>
					<TextView android:layout_width="wrap_content" android:layout_height="50dp"
							android:text="@string/str_local"
							android:gravity="center"
							android:textStyle="bold"
							android:textSize="15sp"
							android:id="@+id/local"
							android:layout_centerHorizontal="true"/>
					<CheckBox android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="@dimen/activity_vertical_margin"
							android:padding="@dimen/activity_vertical_margin"
							android:id="@+id/local_switch"
							android:checked="true"
							android:layout_centerHorizontal="true"/>

				</LinearLayout>
			</RelativeLayout>
		</LinearLayout>
	</android.support.v4.widget.NestedScrollView>
	<Button android:layout_width="120dp"
			android:layout_height="60dp"
			app:fabSize="normal"
			android:layout_margin="@dimen/activity_vertical_margin"
			android:background="@drawable/btn_yellow"
			style="@style/Base.Widget.AppCompat.Button.Colored"
			android:tint="@color/white"
			android:textSize="18sp"
			android:id="@+id/fab"
			android:layout_gravity="bottom|center"
			android:text="@string/strmm_search"

	
	/>
</android.support.design.widget.CoordinatorLayout>