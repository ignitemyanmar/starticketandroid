<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius"
                 android:padding="10dp" 
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/extra_city_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone" 
                    >

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/CustomTextView02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/strmm_extra_city"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey"
                        android:visibility="visible" />

                    <Spinner
                        android:id="@+id/sp_extra_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible" 
                        android:clickable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_agentTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="70"
                        android:gravity="center_vertical"
                        android:text="@string/strmm_seller"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey" 
                        />

                    <Spinner
                        android:id="@+id/spn_starticket_agents"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="30" 
                        />

                    <LinearLayout
                        android:id="@+id/layout_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="70"
                        android:background="@drawable/border_dotted"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:text="@string/strmm_choose_nationality"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/grey" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_light" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp" >

                            <RadioGroup
                                android:id="@+id/radioGroup1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <RadioButton
                                    android:id="@+id/radio_local_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:singleLine="true"
                                    android:text="@string/strmm_local" />

                                <RadioButton
                                    android:id="@+id/radio_foreign_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@string/strmm_foreign" />

                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/txt_wifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:text="@string/strmm_customer_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_buyer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ems="10"
                        android:singleLine="true"
                        app:met_errorColor="@color/golden_brown"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelTextColor="@color/golden_brown" />

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:text="@string/strmm_nrc_no"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey" />

                    <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                        android:id="@+id/edt_nrc_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ems="10"
                        android:inputType="text"
                        android:singleLine="true"
                        app:met_errorColor="@color/golden_brown"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelTextColor="@color/golden_brown" />
                    
                   
                       <RadioGroup
                                android:id="@+id/radioGroup_Gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" 
                                android:padding="20dp">

                                <RadioButton
                                    android:id="@+id/radio_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="@string/strmm_male" />

                                <RadioButton
                                    android:id="@+id/radio_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:text="@string/strmm_female"/>
                                
                                <RadioButton
                                    android:id="@+id/radio_group"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:text="@string/strmm_group"/>

                            </RadioGroup>
                  
                    
                    

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/CustomTextView03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:text="@string/strmm_phone"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ems="10"
                        android:inputType="number"
                        app:met_errorColor="@color/golden_brown"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelTextColor="@color/golden_brown" />

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/txt_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:text="ေရာင္းသူ"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey" />

                    <com.smk.custom.view.CustomAutocompleteTextView
                        android:id="@+id/txt_agent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:ems="10" />

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/CustomTextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:text="ေဘာင္ ခ်ာ နံပါတ္"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey"
                        android:visibility="gone" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_ref_invoice_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ems="10"
                        android:inputType="phone"
                        android:visibility="gone"
                        app:met_errorColor="@color/golden_brown"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelTextColor="@color/golden_brown" />

                    <LinearLayout
                        android:id="@+id/ticket_no_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:text="မွတ္ခ်က္ အ မ်ိဳး အ စား (Remark Type)"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/sp_remark_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/layout_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:orientation="vertical"
                        android:visibility="visible" >

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/customTextView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/strmm_remark"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/grey" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edt_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apptheme_edit_text_holo_light"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            android:visibility="visible"
                            app:met_errorColor="@color/golden_brown"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelTextColor="@color/golden_brown" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:visibility="gone" >

                        <RadioGroup
                            android:id="@+id/rdo_group_cash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/rdo_cash_down"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="ဂိတ္ႀကီး" />

                            <RadioButton
                                android:id="@+id/rdo_credit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ဂိတ္ခြဲ" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:visibility="gone" >

                        <RadioGroup
                            android:id="@+id/rdo_group_local_foreign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/rdo_local"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="ျမန္မာ ႏိုင္ ငံ သား" />

                            <RadioButton
                                android:id="@+id/rdo_foreign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ႏိုင္ ငံ ျခား သား" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.smk.custom.view.CustomButton
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_yellow"
                android:elevation="5dp"
                android:gravity="center"
                android:text="@string/strmm_confirm"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>