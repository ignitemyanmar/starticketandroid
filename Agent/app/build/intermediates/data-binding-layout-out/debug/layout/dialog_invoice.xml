<?xml version="1.0" encoding="utf-8"?>
        
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:minHeight="250dp" android:tag="layout/dialog_invoice_0">

		<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
				android:gravity="center"
				android:textStyle="bold"
				android:id="@+id/name"

				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_small_margin"/>
		<TextView android:layout_width="match_parent" android:layout_height="wrap_content"

				android:id="@+id/phone"
				android:textColor="@color/orange"

				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:textStyle="bold"
				android:paddingBottom="@dimen/activity_small_margin"
		/>
		<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			<TextView android:layout_width="100dp" android:layout_height="wrap_content"
					android:id="@+id/car_class"

					android:paddingLeft="@dimen/activity_vertical_margin"
					android:paddingRight="@dimen/activity_vertical_margin"
					android:layout_gravity="right"
					android:textColor="@color/material_teal"
					android:gravity="left"
					android:textStyle="bold"
			/>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:id="@+id/seats"
					android:paddingLeft="@dimen/activity_vertical_margin"
					android:paddingRight="@dimen/activity_vertical_margin"
					android:gravity="left"
			/>

		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/activity_small_margin">
			<TextView android:layout_width="100dp" android:layout_height="wrap_content"

					android:paddingLeft="@dimen/activity_vertical_margin"
					android:paddingRight="@dimen/activity_vertical_margin"
					android:layout_gravity="right"
					android:text="Total"
					android:textColor="@color/material_teal"

					android:gravity="left"
					android:textStyle="bold"
			/>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

					android:paddingLeft="@dimen/activity_vertical_margin"
					android:id="@+id/amount"
					android:gravity="left"
					android:paddingRight="@dimen/activity_vertical_margin"
			/>

		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/activity_small_margin">
			<TextView android:layout_width="100dp" android:layout_height="wrap_content"

					android:paddingLeft="@dimen/activity_vertical_margin"
					android:paddingRight="@dimen/activity_vertical_margin"
					android:layout_gravity="right"
					android:text="Remark"
					android:textColor="@color/material_teal"
					android:gravity="left"
					android:textStyle="bold"
			/>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:paddingLeft="@dimen/activity_vertical_margin"
					android:id="@+id/remark"
					android:gravity="left"
					android:paddingRight="@dimen/activity_vertical_margin"
			/>

		</LinearLayout>

	</LinearLayout>
         