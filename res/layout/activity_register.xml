<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ticketing_background"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/border_radius"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/user_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_contact_picture_holo_light"
                    android:cropToPadding="true"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical" >

                    <com.smk.custom.view.CustomEditText
                        android:id="@+id/txtFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ems="10"
                        android:hint="First Name"
                        android:inputType="textCapWords|textPersonName" >

                        <requestFocus />
                    </com.smk.custom.view.CustomEditText>

                    <com.smk.custom.view.CustomEditText
                        android:id="@+id/txtLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textCapWords|textPersonName" />
                </LinearLayout>
            </LinearLayout>

            <com.smk.custom.view.CustomEditText
                android:id="@+id/txtNRC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:ems="10"
                android:hint="NRC"
                android:inputType="text" />

            <com.smk.custom.view.CustomEditText
                android:id="@+id/txtUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" >
            </com.smk.custom.view.CustomEditText>

            <com.smk.custom.view.CustomEditText
                android:id="@+id/txtUserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <com.smk.custom.view.CustomEditText
                android:id="@+id/txtUserConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword" />

            <com.smk.custom.view.CustomEditText
                android:id="@+id/txtBankAccNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:ems="10"
                android:hint="Bank Account No."
                android:inputType="number|phone"
                android:visibility="gone" />

            <com.smk.custom.view.CustomEditText
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone" />

            <com.smk.custom.view.CustomEditText
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:ems="10"
                android:hint="Address"
                android:inputType="textMultiLine" />

            <com.smk.custom.view.CustomButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_gold"
                android:text="Submit"
                android:textColor="@color/black" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
