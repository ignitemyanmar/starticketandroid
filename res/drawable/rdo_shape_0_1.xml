<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_window_focused="false"
          android:drawable="@drawable/rdo_green" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:drawable="@drawable/rdo_blue" />
          
    <item android:state_checked="true" android:state_pressed="true"
          android:drawable="@drawable/rdo_green" />
    <item android:state_checked="false" android:state_pressed="true"
          android:drawable="@drawable/rdo_blue" />

    <item android:state_checked="true" android:state_focused="true"
          android:drawable="@drawable/rdo_green" />
    <item android:state_checked="false" android:state_focused="true"
          android:drawable="@drawable/rdo_blue" />

    <item android:state_enabled="false" android:drawable="@drawable/rdo_red_brown" />
    <item android:state_checked="false" android:drawable="@drawable/rdo_blue" />
    <item android:state_checked="true" android:drawable="@drawable/rdo_green" />
    
</selector>
