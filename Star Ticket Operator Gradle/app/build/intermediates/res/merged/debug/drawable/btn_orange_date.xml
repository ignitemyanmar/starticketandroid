<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/black"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners
				android:radius="2dp"
				/>
			<solid android:color="@color/pussian_blue"/>
			<padding
				android:left="0dp"
				android:top="0dp"
				android:right="0dp"
				android:bottom="0dp"
				/>
			<size
				android:width="200dp"
				android:height="30dp"
				/>
        </shape>
    </item>
</selector>