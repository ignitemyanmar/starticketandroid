<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true" >
        <shape>
            <solid android:color="#2DA5DA" />
            <stroke
                android:width="1dp"
                android:color="#e6e6e6" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
				android:angle="270"
				android:centerX="0%"
				android:centerColor="#ffffff"
				android:startColor="#ffffff"
				android:endColor="#ffffff"
				android:type="linear"
				/>
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
			<stroke
				android:width="1dp"
				android:color="#e6e6e6"
				/>
        </shape>
    </item>
</selector>