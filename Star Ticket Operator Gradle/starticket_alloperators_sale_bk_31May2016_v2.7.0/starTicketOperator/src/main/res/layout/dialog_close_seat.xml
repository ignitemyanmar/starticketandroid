<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.smk.custom.view.CustomTextView
                android:id="@+id/CustomTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="မွတ္ခ်က္" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:ems="10" />

            <com.smk.custom.view.CustomTextView
                android:id="@+id/txt_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="အေရာင္း ကိုယ္စားလွယ္" />

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/edt_agent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:dropDownWidth="wrap_content"
        		android:inputType="textAutoComplete|textAutoCorrect"
            	android:singleLine="true"
                android:ems="10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <com.smk.custom.view.CustomButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="50"
                    android:background="@drawable/btn_gray"
                    android:maxWidth="320dp"
                    android:text="ထြက္မည္"
                    android:textColor="@color/white" />

                <com.smk.custom.view.CustomButton
                    android:id="@+id/btn_close_seat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="50"
                    android:background="@drawable/btn_green"
                    android:maxWidth="320dp"
                    android:text="ခံုပိုင္ ေပးမည္"
                    android:textColor="@color/white" />
                
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>