<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticket_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ticket_bg_repeat"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.07" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ticket_logo_rounded" >

                <View
                    android:id="@+id/view1"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:background="#09E5CB" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.31"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtShowName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="This is Show Name"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#E56F09"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.00" >

                <LinearLayout
                    android:layout_width="317dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="26.03"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Price - 2500"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#E56F09" />

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Time : 3:15 to 5:00"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#E56F09" />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Address - No.54, Lanthit Street, Lanmadaw Township, Yangon ( Near Junction Mawtin )."
                        android:textColor="#E56F09" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Ph - 01 520019, 09 73928283"
                        android:textColor="#E56F09" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lybarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="bottom|right"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_barcode"
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:background="#FFF" />

                    <TextView
                        android:id="@+id/txtBarcode"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1234555662342"
                        android:textColor="#E56F09" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>