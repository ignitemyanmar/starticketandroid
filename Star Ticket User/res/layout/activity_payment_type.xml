<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gray_light"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible" >

            <com.smk.custom.view.CustomTextView
                android:id="@+id/CustomTextView04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="ေငြေပးေခ်မည့္ ပံုစံ ကုိ ေရြးပါ ~"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <RadioGroup
                    android:id="@+id/radioGroup_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radio_payWithMPU"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:checked="true"
                        android:text="MPU ကတ္ျဖင့္ေပးမည္"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radio_payWithVisaMaster"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="VISA (or) MASTER card ျဖင့္ေပးမည္"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_booking_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:text="+ 1  (US$) for booking fees"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/golden_brown_dark"
                        android:visibility="gone" />

                    <RadioButton
                        android:id="@+id/radio_cashOnShop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ဆုိင္တြင္ေပးမည္ (Pay at Shop)"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="(The booking will expire in 2 hours)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/golden_brown_dark"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_shop_name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:text="You can pay at convenience stores in Myanmar (City Express, ABC, G&amp;G, Parami Sein Gay Har)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                    <RadioButton
                        android:id="@+id/radio_cashOnDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="အိမ္ အေရာက္ပုိ႔ေပးပါ (Cash on Delivery)"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_delivery_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="+1000 Ks for Delivery Fees (** Delivery Service is available only in Myanmar)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/golden_brown_dark"
                        android:visibility="gone" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_delivery_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Enter address in Myanmar for delivery"
                        android:inputType="text|textCapWords"
                        android:maxWidth="300dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:typeface="normal"
                        android:visibility="gone"
                        app:met_errorColor="@color/golden_brown"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelTextColor="@color/gray" >

                        <requestFocus />
                    </com.rengwuxian.materialedittext.MaterialEditText>
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_light"
                android:padding="5dp"
                android:text="*** အိမ္အေရာက္ပုိ႔၀န္ေဆာင္မႈ ႏွင့္ Convenience Store တြင္ ေငြေပးေခ်လုိပါက (၁) ရက္ ၾကိဳတင္ မွာယူရပါမည္။"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_gold_light"
        android:minHeight="@dimen/button_min_height"
        android:minWidth="@dimen/button_min_width"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>
