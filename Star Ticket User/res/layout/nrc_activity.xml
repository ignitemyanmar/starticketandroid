<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
             >

            <LinearLayout
                android:id="@+id/ly_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/golden_brown"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible" >

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/txt_operator_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="ခရီးသြားမည့္သူ၏ အခ်က္အလက္ ျဖည့္ပါ ~"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/view_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/golden_brown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" >

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/txt_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ခရီးသည္ အမည္"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.smk.custom.view.CustomEditText
                    android:id="@+id/edt_buyer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/apptheme_edit_text_holo_light"
                    android:ems="10"
                    android:singleLine="true" >

                    <requestFocus />
                </com.smk.custom.view.CustomEditText>

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="မွတ္ပံုတင္ အမွတ္"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.smk.custom.view.CustomAutocompleteTextView
                    android:id="@+id/edt_nrc_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/apptheme_edit_text_holo_light"
                    android:ems="10"
                    android:inputType="text"
                    android:singleLine="true" />

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/CustomTextView03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ဖုန္းနံပါတ္"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.smk.custom.view.CustomEditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/apptheme_edit_text_holo_light"
                    android:ems="10"
                    android:inputType="number" />

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/txt_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ေရာင္းသူ"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.smk.custom.view.CustomAutocompleteTextView
                    android:id="@+id/txt_agent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10" />

                <LinearLayout
                    android:id="@+id/extra_city_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/CustomTextView02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="လမ္းေထာင့္ (သုိ႔) ဆက္သြား မည့္ ၿမိဳ႕"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:visibility="visible" />

                    <Spinner
                        android:id="@+id/sp_extra_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible" />
                </LinearLayout>

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/CustomTextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ေဘာင္ ခ်ာ နံပါတ္"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <com.smk.custom.view.CustomEditText
                    android:id="@+id/edt_ref_invoice_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/apptheme_edit_text_holo_light"
                    android:ems="10"
                    android:inputType="phone"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ticket_no_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="မွတ္ခ်က္ အ မ်ိဳး အ စား (Remark Type)"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/sp_remark_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/customTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="မွတ္ခ်က္ (Remark)"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <com.smk.custom.view.CustomEditText
                        android:id="@+id/edt_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <RadioGroup
                        android:id="@+id/rdo_group_cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rdo_cash_down"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="ဂိတ္ႀကီး" />

                        <RadioButton
                            android:id="@+id/rdo_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ဂိတ္ခြဲ" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <RadioGroup
                        android:id="@+id/rdo_group_local_foreign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rdo_local"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="ျမန္မာ ႏိုင္ ငံ သား" />

                        <RadioButton
                            android:id="@+id/rdo_foreign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ႏိုင္ ငံ ျခား သား" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/golden_brown"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/CustomTextView04"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="ေငြေပးေခ်မည့္ စနစ္ ~"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/visa_card" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/master_card" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/paypal" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="ေပးေခ်မည့္ ပံုစံ"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp" >

                        <RadioGroup
                            android:id="@+id/radioGroup_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/radio_debit_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:checked="true"
                                android:text="Debit ကတ္" />

                            <RadioButton
                                android:id="@+id/radio_cash_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="လက္ငင္းေငြသား" />
                        </RadioGroup>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="ကတ္ နံပါတ္"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp" >

                        <EditText
                            android:id="@+id/edt_debit_card"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/apptheme_textfield_activated_holo_light"
                            android:ems="10"
                            android:hint="000000000000000"
                            android:inputType="number" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="ကုန္ဆံုးမည့္ လ/ခုႏွစ္"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="20dp" >

                        <Spinner
                            android:id="@+id/spn_expire_month"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="-"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <Spinner
                            android:id="@+id/spn_expire_year"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <com.smk.custom.view.CustomButton
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_gold_light"
                android:text="ေငြေပးေခ်ရန္ >>"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>