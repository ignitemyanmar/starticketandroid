<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/golden_brown"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible" >

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/CustomTextView05"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Trip Info"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:id="@+id/layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Trip:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_from_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Dept Date:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_dept_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Dept Time:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_dept_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Seat No(s):"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_seats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView08"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Bus Class:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_bus_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Price:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 Ks"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/txt_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Total Amount : 0 Ks"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center" />

            <View
                android:id="@+id/View01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />

            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/golden_brown"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible" >

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/CustomTextView06"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Passenger Info"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" >

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/txt_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ခရီးသည္ အမည္"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_buyer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:typeface="normal"
                    app:met_errorColor="@color/golden_brown"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#8805ad"
                    app:met_helperTextColor="@color/golden_brown"
                    app:met_primaryColor="@color/golden_brown"
                    app:met_textColorHint="@color/gray" >

                    <requestFocus />
                </com.rengwuxian.materialedittext.MaterialEditText>

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="မွတ္ပံုတင္ အမွတ္"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                    android:id="@+id/edt_nrc_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:typeface="normal"
                    android:visibility="gone"
                    app:met_errorColor="@color/golden_brown"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#8805ad"
                    app:met_helperTextColor="@color/golden_brown"
                    app:met_primaryColor="@color/golden_brown"
                    app:met_textColorHint="@color/gray" />

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/CustomTextView03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ခရီးသည္ ဖုန္းနံပါတ္"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:typeface="normal"
                    app:met_errorColor="@color/golden_brown"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#8805ad"
                    app:met_helperTextColor="@color/golden_brown"
                    app:met_primaryColor="@color/golden_brown"
                    app:met_textColorHint="@color/gray" />

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/txt_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ေရာင္းသူ"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                    android:id="@+id/txt_agent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:typeface="normal"
                    android:visibility="gone"
                    app:met_errorColor="@color/golden_brown"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#8805ad"
                    app:met_helperTextColor="@color/golden_brown"
                    app:met_primaryColor="@color/golden_brown"
                    app:met_textColorHint="@color/gray" />

                <LinearLayout
                    android:id="@+id/extra_city_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/CustomTextView02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="လမ္းေထာင့္ (သုိ႔) ဆက္သြား မည့္ ၿမိဳ႕"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:visibility="visible" />

                    <Spinner
                        android:id="@+id/sp_extra_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:visibility="visible" />
                </LinearLayout>

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/CustomTextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ေဘာင္ ခ်ာ နံပါတ္"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_ref_invoice_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ticket_no_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="မွတ္ခ်က္ အ မ်ိဳး အ စား (Remark Type)"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/sp_remark_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/customTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="မွတ္ခ်က္ (Remark)"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <RadioGroup
                        android:id="@+id/rdo_group_cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rdo_cash_down"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="ဂိတ္ႀကီး" />

                        <RadioButton
                            android:id="@+id/rdo_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ဂိတ္ခြဲ" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <RadioGroup
                        android:id="@+id/rdo_group_local_foreign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rdo_local"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="ျမန္မာ ႏိုင္ ငံ သား" />

                        <RadioButton
                            android:id="@+id/rdo_foreign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ႏိုင္ ငံ ျခား သား" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/golden_brown"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/CustomTextView04"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="ေငြေပးေခ်မည့္ ပံုစံ ~"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp" >

                        <RadioGroup
                            android:id="@+id/radioGroup_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <RadioButton
                                android:id="@+id/radio_payWithMPU"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:checked="true"
                                android:text="MPU ကတ္ျဖင့္ေပးမည္" />

                            <RadioButton
                                android:id="@+id/radio_payWithVisaMaster"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="VISA (or) MASTER ကတ္ ျဖင့္ေပးမည္" />

                            <TextView
                                android:id="@+id/txt_booking_fee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="* We will charge plus  4 dollar(US$) for booking fees"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/golden_brown"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/radio_onilnePayment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="Online မွ ေပးေခ်မည္"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/radio_cashOnShop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ဆုိင္တြင္ေပးမည္ (City Express)" />

                            <RadioButton
                                android:id="@+id/radio_cashOnDelivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="အိမ္ အေရာက္ပုိ႔ေပးပါ" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <info.hoang8f.widget.FButton
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_gold_light"
                android:minHeight="@dimen/button_min_height"
                android:minWidth="@dimen/button_min_width"
                android:text="Continue"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>