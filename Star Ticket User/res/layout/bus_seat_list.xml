<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_seat_plan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/layout_round_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:background="@color/golden_brown"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible" >

            <com.smk.custom.view.CustomTextView
                android:id="@+id/txt_round_trip_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="5dp"
                android:text="-"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_round_info" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/no_internet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#99000000"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/txt_no_internet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/attention_icon"
                        android:drawablePadding="10dp"
                        android:gravity="bottom"
                        android:text="No Internet Connection"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:visibility="visible" />
                </LinearLayout>

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/txt_notrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/screen_bg"
                    android:gravity="center_vertical|center_horizontal"
                    android:singleLine="true"
                    android:text="Driver"
                    android:textColor="#FFF" />

                <GridView
                    android:id="@+id/grid_seat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:isScrollContainer="false"
                    android:numColumns="3"
                    android:listSelector="@android:color/transparent">
                </GridView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="50"
                        android:orientation="vertical"
                        android:padding="0dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center_vertical" >

                            <View
                                android:id="@+id/view3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#52C789" />

                            <com.smk.custom.view.CustomTextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="ေရြးျပီး ခံုမ်ား"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center_vertical" >

                            <View
                                android:id="@+id/view_cover"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@color/gray"
                                android:paddingLeft="10dp" />

                            <com.smk.custom.view.CustomTextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="၀ယ္ခြင့္မရွိခံုမ်ား"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <View
                                android:id="@+id/view2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#FF1711" />

                            <com.smk.custom.view.CustomTextView
                                android:id="@+id/txt_wifi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="၀ယ္ျပီး ခံုမ်ား"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <View
                                android:id="@+id/View02"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#470203" />

                            <com.smk.custom.view.CustomTextView
                                android:id="@+id/CustomTextView01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Booking ခံုမ်ား"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <ListView
                            android:id="@+id/lst_group_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="#FFF"
                            android:visibility="visible" >
                        </ListView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical"
                        android:padding="5dp" >

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/txt_departure_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="ထြက္ခြာမည့္ ရက္ : 0000-00-00"
                            android:textSize="18dp" />

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/txt_departure_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="ထြက္ခြာမည့္ အခ်ိန္ : 00:00 AM"
                            android:textSize="18dp" />

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/txt_operator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="ကားဂိတ္ : -"
                            android:textSize="18dp" />

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/txt_classes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="ယာဥ္ အမ်ိဳးအစား : -"
                            android:textSize="18dp" />

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/txt_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="ေစ်းႏႈန္း  : 0 Ks"
                            android:textSize="18dp" />

                        <ListView
                            android:id="@+id/lvBusClass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bus_border"
                            android:divider="#FFF"
                            android:visibility="gone" >
                        </ListView>

                        <com.smk.custom.view.CustomButton
                            android:id="@+id/btn_booking"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/btn_gold"
                            android:padding="5dp"
                            android:text="Booking စာရင္းၾကည့္မည္"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_vertical"
                    android:padding="20dp" >

                    <com.smk.custom.view.CustomButton
                        android:id="@+id/btn_now_booking"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="@drawable/btn_dark_blue"
                        android:padding="5dp"
                        android:text="ဆုိင္တြင္ေပးေခ် ၀ယ္မည္"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <info.hoang8f.widget.FButton
                        android:id="@+id/btn_check_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="50"
                        android:background="@drawable/btn_gold_light"
                        android:minHeight="@dimen/button_min_height"
                        android:minWidth="@dimen/button_min_width"
                        android:padding="5dp"
                        android:text="Continue"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>