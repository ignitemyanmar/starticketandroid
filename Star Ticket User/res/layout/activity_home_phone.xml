        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/app_background"
        android:gravity="center"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_radius"
                    android:gravity="center_vertical"
                    android:minWidth="320dp"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <Button
                        android:id="@+id/btn_sale_tickets"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_gold"
                        android:gravity="center_vertical|left"
                        android:maxWidth="300dp"
                        android:paddingLeft="10dp"
                        android:text="ကားလက္မွတ္ ၀ယ္မည္ (သုိ႔ ) Booking"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_book_confirm_user"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_gold"
                        android:gravity="center_vertical|left"
                        android:maxWidth="300dp"
                        android:paddingLeft="10dp"
                        android:text="မိမိ၏ Booking မ်ား"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_book_confirm"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_gold"
                        android:gravity="center_vertical|left"
                        android:maxWidth="300dp"
                        android:paddingLeft="10dp"
                        android:text="Reservation Confirm (All)"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_three_day_sales"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_gold"
                        android:gravity="center_vertical|left"
                        android:maxWidth="300dp"
                        android:paddingLeft="10dp"
                        android:text="Order စာရင္း"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_myPoints"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/btn_gold"
                        android:gravity="center_vertical|left"
                        android:maxWidth="300dp"
                        android:paddingLeft="10dp"
                        android:text="ကိုယ္ပုိင္ Point မ်ား"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="visible" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray" />

                    <Button
                        android:id="@+id/btn_myProfile"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_gold"
                        android:gravity="center_vertical|left"
                        android:maxWidth="300dp"
                        android:paddingLeft="10dp"
                        android:text="ကုိယ္ပုိင္ စာမ်က္ႏွာ"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_busProfile"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/btn_gold"
                        android:gravity="center_vertical|left"
                        android:maxWidth="300dp"
                        android:paddingLeft="10dp"
                        android:text="ဘတ္(စ္) ကား Profile"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

</LinearLayout>
    
    


