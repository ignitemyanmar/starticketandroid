<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_buyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Buyer Name: -"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Phone: -"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_agent_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Agent Name : -"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:text="YGN - MDY / Business / 10:00 AM I"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="12/06/2014"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="@color/dark_blue"
        android:gravity="center_vertical" >

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_total_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:text="Total Ticket: 10"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:text="Amout: 300000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

</LinearLayout>