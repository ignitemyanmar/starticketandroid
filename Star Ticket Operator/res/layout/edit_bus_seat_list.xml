<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:visibility="gone"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/layout_seat_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
     	android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="80dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ly_loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F2F2F2"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="5dp"
                    android:visibility="gone" >

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Please wait loaing..."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#AAA"
                        android:textSize="12dp"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/no_internet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#99000000"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/txt_no_internet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/attention_icon"
                        android:drawablePadding="10dp"
                        android:gravity="bottom"
                        android:text="No Internet Connection"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:visibility="visible" />
                </LinearLayout>

                <com.smk.custom.view.CustomTextView
                    android:id="@+id/txt_close_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/screen_bg"
                    android:gravity="center_vertical|center_horizontal"
                    android:singleLine="true"
                    android:text="Driver"
                    android:textColor="#FFF" />

                <GridView
                    android:id="@+id/grid_seat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:isScrollContainer="false"
                    android:numColumns="3" >

                </GridView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp" >

                            <View
                                android:id="@+id/view3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#52C789" />

                            <com.smk.custom.view.CustomTextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="ေရြးျပီး ခံုမ်ား" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp" >

                            <View
                                android:id="@+id/view1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#5586c8"
                                android:paddingLeft="10dp" />

                            <com.smk.custom.view.CustomTextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="ခံုလြတ္မ်ား" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:orientation="horizontal" >

                            <View
                                android:id="@+id/view2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#FF1711" />

                            <com.smk.custom.view.CustomTextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="၀ယ္ျပီး ခံုမ်ား" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:orientation="horizontal" >

                            <View
                                android:id="@+id/View02"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#470203" />

                            <com.smk.custom.view.CustomTextView
                                android:id="@+id/CustomTextView01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Booking ခံုမ်ား" />
                        </LinearLayout>

                        <ListView
                            android:id="@+id/lst_group_user"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:divider="#FFF" >
                        </ListView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical" >

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/txt_departure_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="59.64"
                            android:text="ထြက္ခြာမည့္ ရက္ : -"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/txt_departure_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="59.64"
                            android:text="ထြက္ခြာမည့္ အခ်ိန္ : -"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/txt_operator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="59.64"
                            android:text="ကားဂိတ္ : -"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/txt_classes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="59.64"
                            android:text="ကားအမ်ိဳးအစား : -"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <com.smk.custom.view.CustomTextView
                            android:id="@+id/txt_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="59.64"
                            android:text="ေစ်းႏႈန္း  : -"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <ListView
                            android:id="@+id/lvBusClass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="59.64"
                            android:background="@drawable/bus_border"
                            android:divider="#FFF"
                            android:visibility="gone" >
                        </ListView>

                        <com.smk.custom.view.CustomButton
                            android:id="@+id/btn_check_out"
                            android:layout_width="310dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="30dp"
                            android:layout_weight="59.64"
                            android:background="@drawable/btn_green"
                            android:text="ဝယ္ ရန္"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="59.64"
                            android:visibility="visible" >

                            <com.smk.custom.view.CustomButton
                                android:id="@+id/btn_now_booking"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="310dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/btn_blue"
                                android:text="Booking မွာရန္"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.smk.custom.view.CustomButton
                            android:id="@+id/btn_booking"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="310dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/btn_gold"
                            android:text="Booking စားရင္းသို႕"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@color/primary_dark"
            android:divider="@drawable/pull_to_zoom_ic_img_line_v"
            android:padding="5dp"
            android:visibility="visible" >

            <Button
                android:id="@+id/btn_close_seat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="ခံုပိုင္ ေပးမည္"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_open_seat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="ခံုပိုင္ ျပန္ယူမည္"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_checked_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="စစ္ၿပီး"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_unchecked_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="မစစ္ရေသး"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/app_background"
            android:visibility="gone" >

            <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
                android:id="@+id/progressBarCircularIndeterminate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@color/primary_dark"
                android:gravity="center" >
            </com.gc.materialdesign.views.ProgressBarCircularIndeterminate>
        </FrameLayout>

    </RelativeLayout>

</LinearLayout>