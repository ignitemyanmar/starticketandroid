<?xml version="1.0" encoding="utf-8"?>
<layout>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

			android:background="?android:attr/selectableItemBackground">
		<LinearLayout android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:id="@+id/date_container"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:orientation="vertical"
				android:layout_height="wrap_content">
			<TextView
					android:id="@+id/date"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Sep 5"
					android:textSize="30sp"
					android:textStyle="bold"

					android:textColor="@color/orange"
			/>
			<TextView
					android:id="@+id/day"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="8:30"
					android:textSize="20sp"
					android:paddingTop="5dp"
					android:layout_gravity="center"
					android:textColor="#444"
			/>
			<TextView
					android:id="@+id/day_qualifier"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="ညေန"
					android:textSize="13sp"
					android:paddingTop="5dp"
					android:layout_gravity="center"
			/>
		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
				android:padding="@dimen/activity_vertical_margin"
				android:layout_toRightOf="@id/date_container"
				android:orientation="vertical"
				android:id="@+id/desc_container"
				android:layout_height="wrap_content">
			<TextView
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="ရန်ကုန် - လားရှိုး"
					android:paddingLeft="@dimen/activity_vertical_margin"

					android:id="@+id/place"
					android:paddingBottom="10dp"
					android:paddingTop="10dp"
					android:textSize="18sp"
					android:textColor="#444"
			/>
			<TextView
					android:id="@+id/ref"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="#ref 3010231"
					android:paddingTop="3dp"
					android:textStyle="bold"
					android:textSize="12sp"
					android:paddingLeft="@dimen/activity_vertical_margin"
					android:textColor="@color/material_teal"
			/>
			<TextView
					android:id="@+id/description"
					android:layout_width="wrap_content" android:layout_height="wrap_content"

					android:paddingTop="3dp"
					android:textSize="13sp"
					android:paddingLeft="@dimen/activity_vertical_margin"
					android:textColor="#444"
			/>
			<!--android:text="ယမုံဇင် | 2 seats | Total - 18000Ks"-->
			<TextView
					android:id="@+id/buy_date"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="ဝယ်ယူသည့်နေ့ - 12/12/17"
					android:paddingTop="3dp"
					android:textSize="13sp"
					android:paddingLeft="@dimen/activity_vertical_margin"

			/>
		</LinearLayout>
		<View android:layout_width="match_parent" android:layout_height="1dp"
				android:layout_below="@id/desc_container"
				android:layout_marginTop="16dp"
				android:background="@color/gray"/>
	</RelativeLayout>
</layout>