		<LinearLayout
				android:id="@+id/ly_loading"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/ly_title"
				android:background="@android:color/transparent"
				android:gravity="center_horizontal|center_vertical"
				android:padding="2dp"
				android:visibility="visible">

			<ProgressBar
					android:id="@+id/progressBar1"
					style="?android:attr/progressBarStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

			<TextView
					android:id="@+id/action_bar_title2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="@string/strmm_pls_wait"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="@color/grey"
					android:textSize="12dp"
					android:typeface="sans"/>
		</LinearLayout>

		<LinearLayout
				android:id="@+id/ly_title"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="@color/yellow_logo"
				android:gravity="center"
				android:orientation="vertical"
				android:visibility="visible">

			<com.smk.custom.view.CustomTextView
					android:id="@+id/txt_operator_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:drawableLeft="@drawable/ic_directions_bus_black_24dp"
					android:drawablePadding="5dp"
					android:padding="5dp"
					android:text="@string/strmm_choose_bus_seat"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="@color/black"
					android:textSize="18dp"/>

		</LinearLayout>
