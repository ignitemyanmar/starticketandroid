				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_weight="50"
						android:orientation="vertical"
						android:padding="10dp">

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent">

						<com.smk.custom.view.CustomTextView
								android:id="@+id/txt_departure_date"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginRight="5dp"
								android:layout_weight="1"
								android:text="@string/strmm_dept_date"
								android:textColor="@color/grey"
						/>

						<com.smk.custom.view.CustomTextView
								android:id="@+id/txt_departure_time"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="@string/strmm_dept_time"
								android:textColor="@color/grey"
						/>
					</LinearLayout>

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent">

						<com.smk.custom.view.CustomTextView
								android:id="@+id/txt_operator"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginRight="5dp"
								android:layout_marginTop="10dp"
								android:layout_weight="1"
								android:text="@string/strmm_operator_name"
								android:textColor="@color/grey"
						/>

						<com.smk.custom.view.CustomTextView
								android:id="@+id/txt_classes"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:layout_weight="1"
								android:text="@string/strmm_bus_class"
								android:textColor="@color/grey"
						/>
					</LinearLayout>

					<TextView
							android:id="@+id/txt_extra_city"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="10dp"
							android:text="@string/strmm_boarding_place"
							android:textColor="@color/primary_dark"
							android:visibility="gone"/>

					<com.smk.custom.view.CustomTextView
							android:id="@+id/txt_price"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="20dp"
							android:gravity="center"
							android:text="@string/strmm_price"
							android:textColor="@color/black"
							android:textAppearance="?android:attr/textAppearanceMedium"/>

					<ListView
							android:id="@+id/lvBusClass"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="10dp"
							android:background="@drawable/bus_border"
							android:divider="#FFF"
							android:visibility="gone">
					</ListView>
				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:padding="10dp">

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="65dp"
							android:layout_marginBottom="5dp">

						<com.smk.custom.view.CustomButton
								android:id="@+id/btn_now_booking"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_marginRight="5dp"
								android:layout_weight="50"
								android:background="@drawable/btn_green"
								android:padding="5dp"
								android:text="@string/strmm_booking_done"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:textColor="@color/white"
								android:textStyle="bold"
								android:visibility="visible"/>

						<com.smk.custom.view.CustomButton
								android:id="@+id/btn_check_out"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_weight="50"
								android:background="@drawable/btn_yellow"
								android:padding="5dp"
								android:text="@string/strmm_buy"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:textColor="@color/black"
								android:textStyle="bold"
								android:visibility="visible"/>
					</LinearLayout>

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="65dp"
							android:layout_marginBottom="5dp"
							android:visibility="gone">

						<com.smk.custom.view.CustomButton
								android:id="@+id/btn_booking"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_marginRight="5dp"
								android:layout_weight="50"
								android:background="@drawable/btn_dark_blue"
								android:padding="5dp"
								android:text="@string/strmm_booking_list"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:textColor="@color/white"
								android:textStyle="bold"
								android:visibility="gone"/>

						<com.smk.custom.view.CustomButton
								android:id="@+id/btn_tour_booking"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_weight="50"
								android:background="@drawable/btn_dark_blue"
								android:padding="5dp"
								android:text="@string/strmm_tour_booking"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:textColor="@color/white"
								android:textStyle="bold"
								android:visibility="gone"/>
					</LinearLayout>

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="65dp"
							android:layout_marginBottom="5dp">

						<com.smk.custom.view.CustomButton
								android:id="@+id/btn_close_seat"
								style="?android:attr/buttonStyleSmall"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_marginRight="5dp"
								android:layout_weight="50"
								android:background="@drawable/bg_circle"
								android:padding="5dp"
								android:text="@string/strmm_give_ownseats"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:textColor="@color/white"
								android:textStyle="bold"
								android:visibility="visible"/>

						<com.smk.custom.view.CustomButton
								android:id="@+id/btn_open_seat"
								style="?android:attr/buttonStyleSmall"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_weight="50"
								android:background="@drawable/bg_circle"
								android:padding="5dp"
								android:text="@string/strmm_take_ownseats"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:textColor="@color/white"
								android:textStyle="bold"
								android:visibility="visible"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
						android:id="@+id/layout_remark"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:visibility="gone">
				</LinearLayout>
